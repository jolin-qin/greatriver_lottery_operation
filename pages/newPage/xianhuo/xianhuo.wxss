/* 商品列表css */
.list_wrapper {
	padding: 0 20rpx;
	flex-wrap: wrap;
}
.list_wrapper .list_item {
	width: 350rpx;
	border-radius: 20rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
	box-shadow: 0 0 20rpx #e6e6e6;
	position: relative;
}
.list_item .good_img {
	width: 100%;
	height: 350rpx;
	display: block;
}
.list_item .good_content {
	background: #fff;
	padding: 12rpx 20rpx 20rpx;
}
.list_item .good_content .good_name {
	height: 76rpx;
	line-height: 38rpx;
}
.list_item .good_intro {
	font-size: 20rpx;
	color: #999;
}
.list_item .good_price {
	color: #e62a46;
	font-weight: bold;
}
.list_item .corner_mark {
	position: absolute;
	top: 0;
	right: 0;
	width: 70rpx;
	height: 70rpx;
}