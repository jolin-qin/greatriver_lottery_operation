page {
    background-color: #f4f4f4;
    font-size: 32rpx;
}
.goods_infor,
.comment_content
{
    width: 700rpx;
    margin: 24rpx auto 0;
    background-color: #fff;
    padding: 24rpx;
    border-radius: 20rpx;
}
.goods_infor .img {
    width: 200rpx;
    height: 200rpx;
    flex: 0 0 200rpx;
    border-radius: 12rpx;
}
.goods_infor .goods_name {
    flex: 1;
    padding-left: 30rpx;
    
}
.submit_btn {
    width: 500rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background-color: #e2394c;
    border-radius: 40rpx;
    margin-top: 200rpx;
}
.submit_btn::after {
    border: none !important;
}