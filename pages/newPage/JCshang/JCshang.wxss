.wrapper {
	width: 700rpx;
	margin: 20rpx auto 30rpx;
	border-radius: 10rpx;
	padding: 24rpx;
	background-color: #fff;
}
.box_infor {
	padding-bottom: 0;
}
.tool_wrapper,
.time_wrapper
{
	padding: 0;
	background-color: #f7f8fd;
}
.box_infor .boxPic {
	display: block;
	width: 200rpx;
	height: 200rpx;
	margin: 0 auto;
	border-radius: 20rpx;
}
.box_infor .box_title {
	line-height: 68rpx;
	text-align: center;
}
/* 我的道具 */
.wrapper .title {
	font-size: 32rpx;
	font-weight: bold;
	line-height: 60rpx;
}
.tool_wrapper .tool_item {
	width: 336rpx;
	background: #fff;
	border-radius: 20rpx;
	padding: 16rpx;
}
.tool_wrapper .tool_item .tool_img {
	display: block;
	width: 110rpx;
	height: 110rpx;
	flex: 0 0 110rpx;
	border-radius:20rpx;
	margin-right: 20rpx;
}
.tool_wrapper .tool_item .tool_content {
	width: 100%;
	padding: 10rpx;
	background: #F7F7F7;
	border-radius: 10rpx;
}
.tool_wrapper .tool_item .tool_name {
	font-weight: bold;
	font-size: 28rpx;
}
.tool_wrapper .tool_item .text_grey {
	font-size: 20rpx;
	color: #999;
	margin-top: 10rpx;
}
/* 抽奖次数 */
.time_wrapper .time_item {
	width: 190rpx;
	height: 72rpx;
	line-height: 68rpx;
	text-align: center;
	margin-left: 50rpx;
	margin-right: 50rpx;
	margin-top: 24rpx;
	border: 2rpx solid #333;
	border-radius: 12rpx;
}
.time_wrapper .time_container {
	flex-wrap: wrap;
	background: #fff;
	padding: 2px 24rpx 24rpx;
	border-radius: 10rpx;
}
.time_wrapper .time_item.active {
	color: #FE2900;
	border: 2rpx solid #FE2900;
}
/* 支付方式 */
.payment_wrapper .payment_item {
	border-bottom: 2rpx solid #f7f7f7;
	padding: 0 0 24rpx 0;
}
.payment_wrapper .payment_item:nth-child(1) {
	margin-bottom: 24rpx;
}
.payment_wrapper .payment_item:nth-child(2) {
	padding-bottom: 0;
	border-bottom: none;
}

