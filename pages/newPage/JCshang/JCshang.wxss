.show_wrapper {
	position: relative;
}
.show_wrapper .img {
	display: block;
	width: 100%;
}
.show_wrapper .left_img {
	display: block;
	position: absolute;
	top: 60rpx;
	left: 20rpx;
	width: 44rpx;
	z-index: 2;
}
.show_wrapper .right_img {
	display: block;
	position: absolute;
	top: 60rpx;
	right: 20rpx;
	width: 44rpx;
	z-index: 2;
}
.show_wrapper .middle_area {
	width: 100%;
	position: absolute;
	top: 60rpx;
	right: 0;
	z-index: 1;
}
.show_wrapper .middle_area .title_img {
	display: block;
	width: 230rpx;
	height: 66rpx;
	position: absolute;
	top: -40rpx;
	left: 50%;
	transform: translateX(-50%);
	z-index: 2;
}
.show_wrapper .middle_area .series_img {
	display: block;
	width: 390rpx;
	height: 160rpx;
	position: absolute;
	top: 66rpx;
	left: 50%;
	transform: translateX(-51%);
	z-index: 2;
	border-radius: 24rpx;
}
.show_wrapper .middle_area .big_img {
	display: block !important;
	width: 100%;
	height: 784rpx;
}
.show_wrapper .middle_area .sudoku {
	width: 450rpx;
	/* height: 450rpx; */
	position: absolute;
	top: 318rpx;
	left: 50%;
	transform: translateX(-51%);
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-wrap: wrap;
	z-index: 2;
}
.middle_area .sudoku .sudoku_item {
	width: 142rpx;
	height: 142rpx;
	background: url('https://www.jiaochao.top/imageurl/JCshang_13.png') no-repeat;
	background-size: cover;
	margin-right: 12rpx;
	margin-bottom: 12rpx;
}
.middle_area .sudoku .sudoku_item:nth-child(3n) {
	margin-right: 0;
}
.middle_area .sudoku_item .goods_img {
	width: 114rpx;
	height: 114rpx;
	margin-top: 12rpx;
	margin-left: 14rpx;
	border-radius: 12rpx;
}
.show_wrapper .touying {
	display: block;
	width: 502rpx;
	height: 44rpx;
	position: absolute;
	bottom: 174rpx;
	left: 50%;
	transform: translateX(-50%);
}
.show_wrapper .residue_num {
	font-style: italic;
	width: 100%;
	text-align: center;
	position: absolute;
	bottom: 74rpx;
	left: 0;
	z-index: 2;
	color: #fff;
	font-size: 40rpx;
	font-weight: bold;
}
.operation_wrapper {
	position: relative;
	margin-top: 36rpx;
	margin-bottom: 50rpx;
}
.operation_wrapper .name_introduce {
	text-align: center;
}
.operation_wrapper .name_introduce .name {
	font-style: italic;
	font-size: 50rpx;
	font-weight: bold;
	color: #000;
}
.operation_wrapper .name_introduce .introduce {
	color: #000;
	margin: 12rpx 0 20rpx;
}
.operation_wrapper .buy_num {
	width: 630rpx;
	margin: 0 auto;
	flex-wrap: wrap;
}
.operation_wrapper .buy_num .img {
	display: block;
	width: 190rpx;
	height: 72rpx;
}
.operation_wrapper .buy_num .turnkey_img,
.operation_wrapper .buy_num .prop_img
{
	margin-top: 20rpx;
}
.operation_wrapper .buy_num .prop_img {
	display: block;
	width: 412rpx;
	height: 72rpx;
}
.operation_wrapper .biaoqian {
	position: absolute;
	top: -10rpx;
	right: 20rpx;
}
.operation_wrapper .biaoqian .img {
	display: block;
	width: 118rpx;
	height: 40rpx;
}
.operation_wrapper .biaoqian .title_img {
	margin-top: 10rpx;
}