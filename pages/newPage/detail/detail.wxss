.introduce_wrapper {
    width: 100%;
    padding: 30rpx 60rpx;
    border-bottom: 20rpx solid #EDF1F0;
}
.introduce_wrapper .present_price {
    color: #E7463E;
    font-weight: bold;
    font-size: 52rpx;
    margin-right: 20rpx;
}
.introduce_wrapper .original_price {
    color: #ccc;
    font-weight: bold;
    /* font-size: 52rpx; */
}
.introduce_wrapper .goods_name {
    color: #000;
    font-weight: bold;
    font-size: 36rpx;
    margin-top: 16rpx;
}
.introduce_wrapper .goods_detail {
    color: #9c9c9c;
    font-weight: bold;
    margin: 20rpx 0;
}

.introduce_wrapper .goods_label {
    width: 180rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 24rpx;
    color: #fff;
