/* pages/newPage/commentDetail/commentDetail.wxss */
page {
    background-color: #f4f4f4;
}
.comment_item {
    width: 700rpx;
    margin: 24rpx auto;
    padding: 24rpx;
    background-color: #fff;
    border-radius: 20rpx;
}
.comment_item .user_img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    flex: 0 0 80rpx;
}
.comment_item .nick_name {
    font-size: 28rpx;
    padding-left: 20rpx;
    flex: 1;
}
.comment_item .comment_time {
    font-size: 22rpx;
    color: #999;
    width: 206rpx;
    flex: 0 0 206rpx;
}
.comment_item .comment_content {
    font-size: 30rpx;
    margin: 24rpx 0;
}
.comment_item .comment_picture {
    flex-wrap: wrap;
}
.comment_item .comment_picture .img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 12rpx;
    margin-right: 26rpx;
    /* margin-bottom: 20rpx; */
}
.comment_item .comment_picture .img:nth-child(3n+3) {
    margin-right: 0;
}
.reply {
    width: 100%;
    padding: 24rpx;
    background: #F5F6F8;
    border-radius: 8rpx;
    position: relative;
    margin-top: 60rpx;
}
.reply::after {
    display: block;
    content: '';
    position: absolute;
    top: -40rpx;
    left: 50rpx;
    width: 0;
    height: 0;
    border-left: 20rpx solid transparent;
    border-right: 20rpx solid transparent;
    border-bottom: 40rpx solid #F5F6F8;
}
.give_like {
    margin-top: 24rpx;
}
.give_like .zan_img {
    display: block;
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
}
.give_like .zan_number {
    font-size: 24rpx;
}
.give_like .zan_number.active {
    color: #EB5648;
}