/* pages/newPage/commentDetail/commentDetail.wxss */
page {
    background-color: #f4f4f4;
}
.comment_item {
    width: 700rpx;
    margin: 24rpx auto;
    padding: 24rpx;
    background-color: #fff;
    border-radius: 20rpx;
}
.comment_item .user_img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    flex: 0 0 80rpx;
}
.comment_item .nick_name {
    font-size: 28rpx;
    padding-left: 20rpx;
    flex: 1;
}
.comment_item .comment_time {
    font-size: 22rpx;
    color: #999;
    width: 200rpx;
    flex: 0 0 200rpx;
}
.comment_item .comment_content {
    font-size: 30rpx;
    margin: 24rpx 0;
}
.comment_item .comment_picture {
    flex-wrap: wrap;
}
.comment_item .comment_picture .img {
    width: 204rpx;
    height: 204rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
.comment_item .comment_picture .img:nth-child(3n+3) {
    margin-right: 0;
}