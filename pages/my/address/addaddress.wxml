
  <form bindsubmit="formbsumit">
  <view class="cu-form-group">
    <view class='title' style="margin-right:30rpx;">收货人</view>
    <input placeholder="请输入收货人名字" class='radius' name='name'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>手机号码</view>
    <input placeholder="请输入收货人手机号" type="number" class='radius' name='phone'></input>
    <view class="cu-capsule radius">
      <view class='cu-tag bg-blue '>
        +86
      </view>
      <view class="cu-tag line-blue">
        中国大陆
      </view>
    </view>
  </view>
  <view class="cu-form-group">
    <view class='title'>所在地区</view>
    <picker mode="region" name="area" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker">
        {{region[0]}}，{{region[1]}}，{{region[2]}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class='title'>详细地址</view>
    <input placeholder="请输入详细地址" class='radius' name='address'></input>
  </view>


  <view class="cu-form-group margin-top">
    <view class='title'><view>设为默认地址</view></view>
    <switch name="isdefault"></switch>
  </view>


  <view class='btn-group' style="width:100%;padding:0 40rpx;position:fixed;bottom:50rpx">
      <button bindtap="addaddress" 
        form-type="submit"
           class=" cu-btn bg-gradual-orange round "
          style="width:100%;height:75rpx;">保存</button>
        </view>

      </form>